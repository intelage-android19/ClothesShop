<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.clothesshop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/logo1"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/logo1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
    >


        <activity android:name=".activity.ReferActivity"></activity>
        <activity android:name=".activity.OrdersActivity" />
        <activity android:name=".activity.AccountActivity" />
        <activity android:name=".activity.ProdDetailsActivity" />
        <activity android:name=".activity.WishlistActivity" />
        <activity android:name=".activity.CartActivity" />
        <activity android:name=".activity.ClothesActivity" />
        <activity android:name=".activity.TopBrandsDetailsActivity" />
        <activity android:name=".activity.OrderHistoryActivity" />
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Login" />
        <activity android:name=".activity.SignUp" />
        <activity android:name=".activity.ForgetPass" />
        <activity android:name=".activity.WalletActivity" />

        <service android:name=".utility.BlockStatusService" />

    </application>

</manifest>