<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/crdWalletHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="17dp"
        app:cardCornerRadius="5dp"

        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/reltv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/relativeimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgwallet"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/wallet"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="20dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="10dp"
                    android:src="@drawable/wallet"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                  />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/reltv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/relativeimg"

                >


                <TextView
                    android:id="@+id/txtHistoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="name"
                    android:textColor="@color/colorblack"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtHistoryNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtHistoryName"
                    android:gravity="center"
                    android:text="no"
                    android:textColor="@color/colorblack" />

                <TextView
                    android:id="@+id/txtHistoryPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:text="price"
                    android:textColor="@color/colorblack" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/reltv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeimg"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txtHistoryDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0.5"
                    android:singleLine="true"
                    android:text="date"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtHistoryStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:text="status" />
            </LinearLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>